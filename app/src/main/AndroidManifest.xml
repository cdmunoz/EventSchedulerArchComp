<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.cdmunoz.eventscheduler">

    <application
        android:name="co.cdmunoz.eventscheduler.SchedulerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_scheduler_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_scheduler_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.event.list.EventListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.cdmunoz.eventscheduler.ui.event.add.AddEventActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>